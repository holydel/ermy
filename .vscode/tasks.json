{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc", "$msvc"]
        }
    ]
} 